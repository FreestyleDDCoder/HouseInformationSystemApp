<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_house_information"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout
        android:id="@+id/sll_user_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <dym.unique.com.springinglayoutlibrary.view.SpringingImageView
                android:id="@+id/siv_user_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
           />

            <dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
                    android:id="@+id/stv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                     />

                <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
                    android:id="@+id/stv_comment_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                     />
            </dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout>
            <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
                android:id="@+id/stv_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                />
        </dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout>

        <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
            android:id="@+id/stv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:maxLines="5"
            />
    </dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout>
</android.support.v7.widget.CardView>