<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_house_information"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <dym.unique.com.springinglayoutlibrary.view.SpringingImageView
                android:id="@+id/siv_body_picture"
                android:layout_width="125dp"
                android:layout_height="140dp"
                android:layout_margin="5dp" />

            <dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
                    android:id="@+id/stv_house_body_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
                    android:id="@+id/stv_house_body_price"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
                    android:id="@+id/stv_house_body_kinds"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
                    android:id="@+id/stv_house_body_number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
                    android:id="@+id/stv_house_body_openTime"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="1" />

                <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
                    android:id="@+id/stv_house_body_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="2" />
            </dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout>

        </dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout>

        <dym.unique.com.springinglayoutlibrary.view.SpringingTextView
            android:id="@+id/stv_house_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />
    </dym.unique.com.springinglayoutlibrary.viewgroup.SpringingLinearLayout>
</android.support.v7.widget.CardView>